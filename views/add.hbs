<div class="floating-container-add">
  <div class="buttons">
    <a class="returnHome" href="/">BACK TO HOME</a>
    <a class = "returnHome" href="/customer/{{id}}">BACK TO PROFILE</a>
  </div>
  <div class="floating-details">
    <h1 class="floating-h1">Add service for {{name}}</h1>
    <form action="/add/{{id}}" method="post">
      <div class="form-container">
        <div>
          <label for="description">Service description</label>
          <input type="text" name="description">
        <div>
        </div>
          <label for="hours">Hours taken to complete</label>
          <input type="text" name="hours">
        </div>
        <div>
          <label for="engineer">Engineer assigned</label>
          <input type="text" name="engineer">
        </div>
        <div>
          <label for="materials">Materials used</label>
          <input type="text" name="materials">
        </div>
        <div>
          <label for="material_cost">Material cost</label>
          <input type="text" name="material_cost">
        </div>
        <div class="addPage-button">
          <input class="add-service-btn" type="submit" name="submit" value="ADD NEW SERVICE" />
        </div>
      </div>
    </form>
  </div>
</div>